<?php
    $hasta = 10;
    $num = 5;
?>
<!DOCTYPE html>
<html lang="es">
    <head>
            <meta charset="utf-8"/>
            <meta name="author" content="xing"/>
            <title>Tabla de multiplicacion</title>
    </head>
    <body>
        <table border="1px">
            <tr colspan="2">multiplicaicon</tr>
                <?php for($i=0; $i<$hasta; $i++) {?>
                        <tr>
                            <td> <?=$num?> * <?=$i?> </td>
                            <td> <?=$num*$i?> </td>
                        </tr>
                <?php } ?>
        </table>
    </body>
</html>